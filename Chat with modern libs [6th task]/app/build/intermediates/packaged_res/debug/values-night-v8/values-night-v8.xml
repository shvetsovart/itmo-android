<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="AttachButton" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/night_round_button</item>
        <item name="android:src">@drawable/night_attach_button</item>
    </style>
    <style name="MessageStyle" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/night_round_message</item>
    </style>
    <style name="MessageTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NickStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SendButton" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/night_round_button</item>
        <item name="android:src">@drawable/night_send_button</item>
    </style>
    <style name="Theme.Messenger" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">#4B91E4</item>
        <item name="colorPrimaryVariant">#2778B6</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="colorSecondary">#4B91E4</item>
        <item name="colorSecondaryVariant">#2778B6</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
        
    </style>
    <style name="UserMessageStyle" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/night_round_user_message</item>
    </style>
    <style name="UserNickStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/day_message_user</item>
    </style>
</resources>